{
  "name": "doors-smores",
  "publisher": "Nilfheim",
  "displayName": "Doors Smores",
  "description": "Requirements simplified",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.smores-project"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "smoresTreeView",
        "contents": "No Doors Smores project found [learn more](https://xkcd.com/1319/).\n[Start New Project](command:smores.initialise)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smoresTreeView",
          "title": "Doors Smores",
          "icon": "resources/book.svg"
        }
      ]
    },
    "views": {
      "smoresTreeView": [
        {
          "id": "smoresTreeView",
          "name": "Smores Document Tree",
          "icon": "resources/book.svg",
          "contextualTitle": "Doors Smores"
        }
      ]
    },
    "commands": [
      {
        "command": "doors-smores.Update-TreeView",
        "category": "Smores",
        "title": "Actively update the tree view",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "doors-smores.View-TreeNode",
        "category": "Smores",
        "title": "View document item, and sub-items"
      },
      {
        "command": "doors-smores.Edit-Section",
        "category": "Smores",
        "title": "Edit document section"
      }
    ],
    "menus": {
      "webview/context": [
        {
          "command": "doors-smores.Edit-Section",
          "when": "webviewId == 'smoresNodeView' || webviewId == 'Node-comment'"
        }
      ],
      "view/title": [
        {
          "command": "doors-smores.Update-TreeView",
          "when": "view == smoresTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/showdown": "^2.0.1",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.44.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "showdown": "^2.1.0"
  }
}
