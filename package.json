{
  "name": "doors-smores",
  "publisher": "Nilfheim",
  "displayName": "Doors Smores",
  "description": "Requirements simplified",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.smores-project"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "smoresTreeView",
        "when": "workspaceFolderCount > 0 && !doors-smores.projectOpen",
        "contents": "No current doors-smores project.\n[learn more](https://xkcd.com/1319/).\n[Start New Project](command:doors-smores.Initialise-Workspace)\n[Open Existing Project](command:doors-smores.Open-Project)"
      },
      {
        "view": "smoresTreeView",
        "when": "workspaceFolderCount > 0 && doors-smores.projectOpen",
        "contents": "Empty project found.\n[New Document](command:doors-smores.New-Document)"
      },
      {
        "view": "smoresTreeView",
        "when": "workspaceFolderCount == 0",
        "contents": "You have not yet opened a folder.\n[Open Folder](command:vscode.openFolder)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smoresTreeView",
          "title": "Doors Smores",
          "icon": "resources/activitybaricon.png"
        }
      ]
    },
    "views": {
      "smoresTreeView": [
        {
          "id": "smoresTreeView",
          "name": "Smores Document Tree",
          "icon": "resources/book.svg",
          "contextualTitle": "Doors Smores"
        }
      ]
    },
    "commands": [
      {
        "command": "doors-smores.Initialise-Workspace",
        "category": "Smores",
        "title": "Initialise Workspace"
      },
      {
        "command": "doors-smores.Open-Project",
        "category": "Smores",
        "title": "Open Project"
      },
      {
        "command": "doors-smores.Update-TreeView",
        "category": "Smores",
        "title": "Actively update the tree view",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "doors-smores.View-TreeNode",
        "category": "Smores",
        "title": "View document item, and sub-items",
        "icon": "$(eye)"
      },
      {
        "command": "doors-smores.Edit-Section",
        "category": "Smores",
        "title": "Edit document section"
      },
      {
        "command": "doors-smores.Promote-Node",
        "category": "Smores",
        "title": "Promote",
        "icon": {
          "light": "resources/light/arrow-small-left.png",
          "dark": "resources/dark/arrow-small-left.png"
        }
      },
      {
        "command": "doors-smores.Demote-Node",
        "category": "Smores",
        "title": "Demote",
        "icon": {
          "light": "resources/light/arrow-small-right.png",
          "dark": "resources/dark/arrow-small-right.png"
        }
      },
      {
        "command": "doors-smores.Move-Node-Up",
        "category": "Smores",
        "title": "Move Up",
        "icon": {
          "light": "resources/light/arrow-small-up.png",
          "dark": "resources/dark/arrow-small-up.png"
        }
      },
      {
        "command": "doors-smores.Move-Node-Down",
        "category": "Smores",
        "title": "Move Down",
        "icon": {
          "light": "resources/light/arrow-small-down.png",
          "dark": "resources/dark/arrow-small-down.png"
        }
      },
      {
        "command": "doors-smores.New-Heading",
        "category": "Smores",
        "title": "New Heading"
      },
      {
        "command": "doors-smores.New-Comment",
        "category": "Smores",
        "title": "New Comment"
      },
      {
        "command": "doors-smores.New-Functional-Requirement",
        "category": "Smores",
        "title": "New Functional Requirement"
      }
    ],
    "menus": {
      "webview/context": [
        {
          "command": "doors-smores.Edit-Section",
          "when": "webviewId == 'smoresNodeView' && webviewSection =~ /Node-/"
        }
      ],
      "view/title": [
        {
          "command": "doors-smores.Update-TreeView",
          "when": "view == smoresTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "doors-smores.Promote-Node",
          "when": "view == smoresTreeView && viewItem =~ /PROMOTE/",
          "group": "inline@1"
        },
        {
          "command": "doors-smores.Demote-Node",
          "when": "view == smoresTreeView && viewItem =~ /DEMOTE/",
          "group": "inline@2"
        },
        {
          "command": "doors-smores.Move-Node-Up",
          "when": "view == smoresTreeView && !(viewItem =~ /MIN_CHILD/)",
          "group": "inline@3"
        },
        {
          "command": "doors-smores.Move-Node-Down",
          "when": "view == smoresTreeView && !(viewItem =~ /MAX_CHILD/)",
          "group": "inline@4"
        },
        {
          "command": "doors-smores.View-TreeNode",
          "when": "view == smoresTreeView",
          "group": "inline@5"
        },
        {
          "command": "doors-smores.New-Heading",
          "when": "view == smoresTreeView && ((viewItem =~ /document/) || (viewItem =~ /heading/))"
        },
        {
          "command": "doors-smores.New-Comment",
          "when": "view == smoresTreeView && (viewItem =~ /heading/)"
        },
        {
          "command": "doors-smores.New-Functional-Requirement",
          "when": "view == smoresTreeView && (viewItem =~ /heading/)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/showdown": "^2.0.1",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.44.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "showdown": "^2.1.0",
    "xss": "^1.0.14"
  }
}
